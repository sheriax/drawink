{
  "private": true,
  "name": "drawink-monorepo",
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "drawink-app",
    "packages/*",
    "examples/*",
    "json-backend"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.26.9",
    "@drawink/eslint-config": "workspace:*",
    "@drawink/prettier-config": "workspace:*",
    "@types/chai": "4.3.0",
    "@types/jest": "27.4.0",
    "@types/lodash.throttle": "4.1.7",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/socket.io-client": "3.0.0",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-v8": "3.0.7",
    "@vitest/ui": "2.0.5",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "3.3.1",
    "http-server": "14.1.1",
    "husky": "7.0.4",
    "jsdom": "22.1.0",
    "lint-staged": "12.3.7",
    "pepjs": "0.5.3",
    "prettier": "2.6.2",
    "rewire": "6.0.0",
    "rimraf": "^5.0.0",
    "typescript": "4.9.4",
    "vite": "5.0.12",
    "vite-plugin-checker": "0.8.0",
    "vite-plugin-ejs": "1.7.0",
    "vite-plugin-pwa": "0.21.1",
    "vite-plugin-svgr": "4.2.0",
    "vitest": "3.0.6",
    "vitest-canvas-mock": "0.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": ".",
  "prettier": "@drawink/prettier-config",
  "scripts": {
    "build-node": "bun ./scripts/build-node.ts",
    "build:app:docker": "bun --cwd ./drawink-app run build:app:docker",
    "build:app": "bun --cwd ./drawink-app run build:app",
    "build:common": "bun --cwd ./packages/common run build:esm",
    "build:element": "bun --cwd ./packages/element run build:esm",
    "build:drawink": "bun --cwd ./packages/drawink run build:esm",
    "build:math": "bun --cwd ./packages/math run build:esm",
    "build:packages": "bun run build:common && bun run build:math && bun run build:element && bun run build:drawink",
    "build:version": "bun --cwd ./drawink-app run build:version",
    "build": "bun --cwd ./drawink-app run build",
    "build:preview": "bun --cwd ./drawink-app run build:preview",
    "start": "bun --cwd ./drawink-app run start",
    "start:production": "bun --cwd ./drawink-app run start:production",
    "start:example": "bun run build:packages && bun --cwd ./examples/with-script-in-browser run start",
    "start:backend": "bun --cwd ./json-backend run dev",
    "test:all": "bun run test:typecheck && bun run test:code && bun run test:other && bun run test:app --watch=false",
    "test:app": "vitest",
    "test:code": "eslint --max-warnings=0 --ext .js,.ts,.tsx .",
    "test:other": "bun run prettier --list-different",
    "test:typecheck": "tsc",
    "test:update": "bun run test:app --update --watch=false",
    "test": "bun run test:app",
    "test:coverage": "vitest --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:ui": "bun run test --ui --coverage.enabled=true",
    "fix:code": "bun run test:code --fix",
    "fix:other": "bun run prettier --write",
    "fix": "bun run fix:other && bun run fix:code",
    "locales-coverage": "bun scripts/build-locales-coverage.ts",
    "locales-coverage:description": "bun scripts/locales-coverage-description.ts",
    "prepare": "husky install",
    "prettier": "prettier \"**/*.{css,scss,json,md,html,yml}\" --ignore-path=.eslintignore",
    "release": "bun scripts/release.ts",
    "release:test": "bun scripts/release.ts --tag=test",
    "release:next": "bun scripts/release.ts --tag=next",
    "release:latest": "bun scripts/release.ts --tag=latest",
    "rm:build": "rimraf --glob drawink-app/build drawink-app/dist drawink-app/dev-dist packages/*/dist packages/*/build examples/*/build examples/*/dist",
    "rm:node_modules": "rimraf --glob node_modules drawink-app/node_modules packages/*/node_modules",
    "clean-install": "bun run rm:node_modules && bun install"
  },
  "overrides": {
    "strip-ansi": "6.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0"
  },
  "dependencies": {
    "canvas": "3"
  }
}