{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/convex/*": ["src/convex/*"],
      "@/styles/*": ["src/styles/*"],
      "@drawink/drawink": ["packages/drawink/index.tsx"],
      "@drawink/drawink/*": ["packages/drawink/*"],
      "@drawink/common": ["packages/common/src/index.ts"],
      "@drawink/common/*": ["packages/common/src/*"],
      "@drawink/element": ["packages/element/src/index.ts"],
      "@drawink/element/*": ["packages/element/src/*"],
      "@drawink/math": ["packages/math/src/index.ts"],
      "@drawink/math/*": ["packages/math/src/*"],
      "@drawink/utils": ["packages/utils/src/index.ts"],
      "@drawink/utils/*": ["packages/utils/src/*"],
      "@drawink/types": ["packages/types/src/index.ts"],
      "@drawink/types/*": ["packages/types/src/*"]
    },
    "types": ["vite/client", "vite-plugin-svgr/client"]
  },
  "include": ["src/**/*", "src/**/*.tsx", "src/**/*.ts", "vite.config.ts", "convex/**/*"],
  "exclude": ["node_modules", "dist", "build", "src/tests/**/*", "**/*.test.ts", "**/*.test.tsx"]
}
