{
  "overrides": [
    {
      "files": [
        "src/**/*.{ts,tsx}"
      ],
      "rules": {
        "@typescript-eslint/no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": [
                  "../../drawink",
                  "../../../packages/drawink",
                  "@drawink/drawink"
                ],
                "message": "Do not import from '@drawink/drawink' package anything but types, as this package must be independent.",
                "allowTypeImports": true
              }
            ]
          }
        ]
      }
    }
  ]
}