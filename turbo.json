{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["NODE_ENV"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".astro/**"],
      "cache": true
    },

    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },

    "lint": {
      "dependsOn": ["^build"],
      "cache": true
    },

    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true
    },

    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["coverage/**"]
    },

    "clean": {
      "cache": false
    }
  }
}
